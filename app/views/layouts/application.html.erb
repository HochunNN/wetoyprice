  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-89884317-1', 'auto');
  ga('send', 'pageview');
  $("#product_name").keydown(function (key) {
    if(key.keyCode == 13){//키가 13이면 실행 (엔터는 13)
      var uri = "../home/page_price?search_product_name=" + $("#product_name").val()
      encodeURI(uri);
			location.href=uri;
    }
  });
  $("#search").click(function(){
  	var uri = "../home/page_price?search_product_name=" + $("#product_name").val()
  	encodeURI(uri);
		location.href=uri;
  })
  
  var notice = $("#hidden_notice").val();
    
  if ( notice != "" ) {
      alert(notice)
  }
  
</script>